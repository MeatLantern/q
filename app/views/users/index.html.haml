-# This file is app/view/users/index.html.haml
%h1 All Users

%table#users
  %thead
    %tr
      %th Username
      %th Email
      %th Current Game
      %th Profile
  %tbody
    -@users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.currentgame
        %td= link_to "profile", user_path(:id => user.id), :method=> :get